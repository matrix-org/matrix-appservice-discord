{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2016",
        "noImplicitAny": false,
        "inlineSourceMap": true,
        "outDir": "./build",
        "types": ["mocha", "node"],
        "strictNullChecks": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true, /* matrix-bot-sdk throws up errors */
    },
    "compileOnSave": true,
    "include": [
        "src/**/*",
        "test/**/*",
        "tools/**/*",
    ]
}
